[Desktop Entry]
Exec=dcop kdesktop KBackgroundIface setWallpaper /cdrom/$WALLPAPER $WALLPAPER_MODE
Icon=background
Name=Wallpaper
Name[en_US]=Wallpaper
Type=Application
EOT

fi

#========== build home-autostart-start.tbz file is built from HOME AUTOSTART START
